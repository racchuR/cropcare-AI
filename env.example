# CropCare AI Environment Variables
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://cropcare:password@localhost:5432/cropcare_db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=CropCare AI

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
MODEL_PATH=ml_model/saved_models/crop_disease_model.pth
MODEL_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
WORKERS=1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# DEBUG=false
# RELOAD=false
# WORKERS=4
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
